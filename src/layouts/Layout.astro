---
import '../styles/global.css';
import { SEO } from 'astro-seo';
import MobileMenu from '@components/MobileMenu.astro';
import ContactLinksSection from '@components/ContactLinksSection.astro';
import DistortFilter from '@components/DistortFilter.astro';
import Sidebar from '@components/Sidebar.astro';
import SpacingWithCorners from '@components/SpacingWithCorners.astro';

interface Props {
    title: string;
    description?: string;
    ogimageName?: string;
}

const { title, description, ogimageName } = Astro.props;
const adjustedTitle = title ? 'iamrobin' + ' â€“ ' + title : 'iamrobin';
const adjustedDescription = description ? description : 'personal website of iamrobin';

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();
const imageFileName = ogimageName ? `/opengraph/${ogimageName}` : '/opengraph/opengraph.jpg';
const resolvedImageWithDomain = new URL(imageFileName, Astro.site).toString();
---

<!doctype html>
<html lang="en" class="overscroll-none">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="robins own little space on the internet" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
        <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
        <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
        <link rel="manifest" href="/site.webmanifest" />
        <link rel="alternate" type="application/rss+xml" title="365 RSS Feed" href="/365-rss.xml" />
        <meta name="generator" content={Astro.generator} />
        <title>{adjustedTitle}</title>
        <!-- Critical CSS for sidebar state - prevents FOUC -->
        <script>
            (function () {
                // Apply sidebar state before page renders to prevent flash
                if (typeof window !== 'undefined' && window.innerWidth >= 1024) {
                    const isCollapsed = localStorage.getItem('sidebar-collapsed') === 'true';
                    if (isCollapsed) {
                        document.documentElement.classList.add('sidebar-collapsed');
                    }
                }
            })();
        </script>
        <script src="/iamrobin/js/script.js" data-api="/iamrobin/api/event" data-domain="iamrob.in"
        ></script>
        <SEO
            title={adjustedTitle}
            description={adjustedDescription}
            canonical={canonicalURL}
            openGraph={{
                basic: {
                    url: canonicalURL,
                    type: 'website',
                    title: title,
                    image: resolvedImageWithDomain
                },
                image: {
                    alt: 'iamrobin personal website screenshot'
                }
            }}
        />
    </head>
    <body class="md:bg-[var(--body-bg-color)] antialiased">
        <MobileMenu />
        <Sidebar />

        <SpacingWithCorners position="top" />
        <SpacingWithCorners position="bottom" />

        <div
            class="bg-white md:ml-[var(--sidebar-width)] md:my-8 md:mr-4 relative transition-[margin-left] duration-300 ease-in-out"
        >
            <slot />
            <ContactLinksSection />
        </div>

        <DistortFilter />
        <style>
            :root {
                --body-bg-color: #101827;
                --sidebar-width-base-value: 16rem;
                --sidebar-width-base-value-large: 20rem;
                --sidebar-width-collapsed: 5rem;

                --sidebar-width: 0;
            }

            /* Disable bounce scrolling globally */
            html,
            body {
                overscroll-behavior: none;
            }

            @media (min-width: 768px) {
                :root {
                    --sidebar-width: var(--sidebar-width-collapsed);
                }
            }

            @media (min-width: 1024px) {
                :root {
                    --sidebar-width: var(--sidebar-width-base-value);
                }
            }

            @media (min-width: 1480px) {
                :root {
                    --sidebar-width: var(--sidebar-width-base-value-large);
                }
            }

            /* Collapsed state for sidebar width */
            html.sidebar-collapsed {
                --sidebar-width: var(--sidebar-width-collapsed);
            }
        </style>
    </body>
</html>
