---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';
import { SEO } from 'astro-seo';
import MobileMenu from '@components/MobileMenu.astro';
import ContactLinksSection from '@components/ContactLinksSection.astro';
import DistortFilter from '@components/DistortFilter.astro';
import Sidebar from '@components/Sidebar.astro';

interface Props {
    title: string;
    description?: string;
    ogimageName?: string;
}

const { title, description, ogimageName } = Astro.props;
const adjustedTitle = title ? 'iamrobin' + ' â€“ ' + title : 'iamrobin';
const adjustedDescription = description ? description : 'personal website of iamrobin';

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();
const imageFileName = ogimageName ? `/opengraph/${ogimageName}` : '/opengraph/opengraph.jpg';
const resolvedImageWithDomain = new URL(imageFileName, Astro.site).toString();
---

<!doctype html>
<html lang="en" class="overscroll-none">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="robins own little space on the internet" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
        <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
        <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
        <link rel="manifest" href="/site.webmanifest" />
        <link rel="alternate" type="application/rss+xml" title="365 RSS Feed" href="/365-rss.xml" />
        <meta name="generator" content={Astro.generator} />
        <title>{adjustedTitle}</title>
        <script src="/iamrobin/js/script.js" data-api="/iamrobin/api/event" data-domain="iamrob.in"
        ></script>
        <SEO
            title={adjustedTitle}
            description={adjustedDescription}
            canonical={canonicalURL}
            openGraph={{
                basic: {
                    url: canonicalURL,
                    type: 'website',
                    title: title,
                    image: resolvedImageWithDomain
                },
                image: {
                    alt: 'iamrobin personal website screenshot'
                }
            }}
        />
    </head>
    <body class="bg-[var(--body-bg-color)] antialiased">
        <!-- <Header />
        <MobileMenu /> -->
        <Sidebar />

        <!-- top spacing -->
        <div
            class="sidebar-element sidebar-spacing-top fixed top-0 right-0 h-4 bg-[var(--body-bg-color)] z-50"
        >
        </div>
        <!-- bottom spacing -->
        <div
            class="sidebar-element sidebar-spacing-bottom fixed bottom-0 right-0 h-4 bg-[var(--body-bg-color)] z-50"
        >
        </div>
        <!-- right spacing -->
        <div class="fixed top-0 bottom-0 right-0 w-4 bg-[var(--body-bg-color)] z-50"></div>
        <div class="sidebar-element sidebar-content-bg fixed inset-4 rounded bg-[var(--content-bg-color)]">
        </div>

        <div class="sidebar-element sidebar-main-content relative">
            <slot />
            <ContactLinksSection />
            <Footer />
        </div>

        <DistortFilter />
        <style>
            :root {
                --body-bg-color: #433e3c;
                --content-bg-color: #fff;
                --sidebar-width: 16rem;
                --sidebar-width-collapsed: 5rem;
            }
            
            /* Smooth transitions for sidebar collapse - using specific properties instead of custom properties */
            .sidebar-element {
                transition: left 0.3s ease-in-out, margin-left 0.3s ease-in-out, width 0.3s ease-in-out;
            }
            
            /* Default expanded state */
            .sidebar-spacing-top { left: var(--sidebar-width); }
            .sidebar-spacing-bottom { left: var(--sidebar-width); }
            .sidebar-content-bg { left: var(--sidebar-width); }
            .sidebar-main-content { margin-left: var(--sidebar-width); }
            
            /* Collapsed state styles */
            body.sidebar-collapsed .sidebar-spacing-top { left: var(--sidebar-width-collapsed); }
            body.sidebar-collapsed .sidebar-spacing-bottom { left: var(--sidebar-width-collapsed); }
            body.sidebar-collapsed .sidebar-content-bg { left: var(--sidebar-width-collapsed); }
            body.sidebar-collapsed .sidebar-main-content { margin-left: var(--sidebar-width-collapsed); }
            
            /* Collapsed state for sidebar width */
            body.sidebar-collapsed {
                --sidebar-width: var(--sidebar-width-collapsed);
            }
        </style>
    </body>
</html>
