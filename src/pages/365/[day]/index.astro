---
import PhotoDetailLayout from '@layouts/PhotoDetailLayout.astro';
import { Image } from 'astro:assets';
import { createDayArray, getDayOfYear } from 'src/utils/365-helpers';
import { ArrowLeft, ArrowRight, X } from '@phosphor-icons/react';
import HeaderSimple from '@components/HeaderSimple.astro';

export async function getStaticPaths() {
    const today = new Date();
    const allDays = createDayArray(getDayOfYear(today));
    return allDays.map((day) => ({
        params: { day: day },
        props: { allDays }
    }));
}

const { day } = Astro.params;
const { allDays } = Astro.props;

interface PhotoModule {
    default: ImageMetadata;
}

// Import all photos for this specific date
const allPhotos: PhotoModule[] = Object.values(
    import.meta.glob('../../../../src/assets/365/*', {
        eager: true
    })
);

// Filter photos to only include those that match the date
const photos: PhotoModule[] = allPhotos.filter((photo) => {
    if (!photo || !photo.default || !photo.default.src) return false;
    const filename = photo.default.src.split('/').pop() || '';
    return filename.startsWith(day);
});

// Sort photos by timestamp if you have multiple photos for the same day
const sortedPhotos = photos.sort((a, b) => {
    const timeA = a.default?.src.split('_')[1]?.split('.')[0] || '';
    const timeB = b.default?.src.split('_')[1]?.split('.')[0] || '';
    return timeA.localeCompare(timeB);
});

const currentDayIndex = allDays.findIndex((dayStrings) => dayStrings === day);

// Determine prev/next days
const nextDay = currentDayIndex > 0 ? allDays[currentDayIndex - 1] : null;
const prevDay = currentDayIndex < allDays.length - 1 ? allDays[currentDayIndex + 1] : null;
---

<PhotoDetailLayout title={`Day ${day} - 365 Project`}>
    <HeaderSimple hasMobileBottomSlot isWiderOnDesktop>
        <ul class="flex gap-2 font-mono text-xs" slot="desktop-center">
            <li>
                <a href="/365">365</a>
            </li>
            <li>/</li>
            <li>
                <a class="font-bold" href={`/365/${day}`}>{day}</a>
            </li>
        </ul>
        <ul class="flex gap-2 font-mono text-xs" slot="mobile-bottom">
            <li>
                <a href="/365">365</a>
            </li>
            <li>/</li>
            <li>
                <a class="font-bold" href={`/365/${day}`}>{day}</a>
            </li>
        </ul>
        <a href="/365" class="flex items-center gap-4" slot="desktop-mobile-end">
            <X size={20} weight="bold" />
        </a>
    </HeaderSimple>
    <div
        class="flex min-h-[calc(100vh-82px-78px)] items-center justify-center lg:min-h-[calc(100vh-3.5rem)]"
        id="photo-container"
    >
        {
            sortedPhotos.length !== 0 && (
                <div class="flex h-[70vh] max-h-[1000px] items-center px-4 lg:h-[80vh] lg:px-0">
                    <Image
                        src={sortedPhotos[0]?.default}
                        alt={`Photo taken on ${day}`}
                        width={sortedPhotos[0]?.default.width}
                        height={sortedPhotos[0]?.default.height}
                        class="h-full w-auto object-contain text-[0px]"
                    />
                </div>
            )
        }
        {sortedPhotos.length === 0 && <p>No photos found for this date.</p>}
    </div>
    <div class="flex justify-between md:block">
        {
            nextDay && (
                <a
                    class="group bottom-0 left-0 top-14 flex items-center justify-start py-6 pl-4 md:absolute md:w-32 md:pl-6 md:transition-all md:hover:pl-4 lg:w-1/4 lg:pl-10 lg:hover:pl-8"
                    href={nextDay}
                    id="next-day-link"
                >
                    <div class="flex items-center gap-2 md:flex-col md:gap-4 lg:flex-row">
                        <ArrowLeft
                            size={30}
                            className="md:translate-x-1 md:transition-all md:group-hover:translate-x-0"
                        />
                        <span class="font-mono text-sm md:translate-x-6 md:opacity-0 md:transition-all md:group-hover:translate-x-0 md:group-hover:opacity-100 lg:text-base">
                            {nextDay}
                        </span>
                    </div>
                </a>
            )
        }
        {
            prevDay && (
                <a
                    class="group bottom-0 right-0 top-14 flex items-center justify-end py-6 pr-4 md:absolute md:w-32 md:pr-6 md:transition-all md:hover:pr-4 lg:w-1/4 lg:pr-10 lg:hover:pr-8"
                    href={prevDay}
                    id="prev-day-link"
                >
                    <div class="flex items-center gap-2 md:flex-col-reverse md:gap-4 lg:flex-row">
                        <span class="font-mono text-sm md:-translate-x-6 md:opacity-0 md:transition-all md:group-hover:translate-x-0 md:group-hover:opacity-100 lg:text-base">
                            {prevDay}
                        </span>
                        <ArrowRight
                            size={30}
                            className="md:translate-x-1 md:transition-all md:group-hover:translate-x-0"
                        />
                    </div>
                </a>
            )
        }
    </div>
</PhotoDetailLayout>

<script>
    document.addEventListener('keydown', (e) => {
        if (e.key === 'ArrowRight') {
            const prevLink = document.getElementById('prev-day-link');
            if (prevLink) {
                const href = prevLink.getAttribute('href');
                if (href) {
                    window.location.href = href;
                }
            }
        } else if (e.key === 'ArrowLeft') {
            const nextLink = document.getElementById('next-day-link');
            if (nextLink) {
                const href = nextLink.getAttribute('href');
                if (href) {
                    window.location.href = href;
                }
            }
        }
    });
</script>
