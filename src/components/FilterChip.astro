---
interface Props {
    color: string;
    href: string;
    title: string;
    count: number;
    isActive: boolean;
}

const { color, href, title, count, isActive } = Astro.props;
---

<li>
    <a
        href={href}
        class:list={[
            "flex cursor-pointer items-center gap-2 rounded-full border border-border px-3 py-1 text-sm no-underline hover:bg-surface-raised",
            isActive ? "bg-neutral-200 font-bold text-black" : "",
        ]}
    >
        <span
            class="inline-block w-2 h-2 rounded-full shrink-0"
            style={`background-color: ${color}`}></span>
        {title}
        <span class:list={["text-text-muted", isActive && "text-neutral-500"]}>({count})</span>
    </a>
</li>
