---
import type { AlbumDetails } from "@api/lastfm";
import { hashString } from "@utils/spineColors";

interface Props {
    album: AlbumDetails;
}

const { album } = Astro.props;

const discColors = [
    "#ff8477",
    "#6ad09d",
    "#b3cdfb",
    "#ffc700",
    "#c6b9ff",
    "#635c7f",
    "#ffc1bb",
];

const colorIndex = hashString(album.title + album.artist) % discColors.length;
const discColor = discColors[colorIndex];
---

<a
    href={album.url}
    target="_blank"
    rel="noopener noreferrer"
    class="album-link flex flex-col gap-3"
>
    <div>
        <div
            class="relative bg-surface-raised rounded-lg flex items-center justify-center py-10 px-4 overflow-hidden"
        >
            <div class="album-container">
                <div class="album-wrap">
                    <div
                        class="album-cover"
                        style={album.cover
                            ? `background-image: url(${album.cover})`
                            : undefined}
                    >
                    </div>
                    <div class="disk" style={`--disc-color: ${discColor}`}>
                        <div class="disk-inside"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="flex flex-col gap-.5">
        <p class="text-text-primary text-sm leading-tight font-bold">
            {album.title}
        </p>
        <p class="text-text-secondary text-sm">{album.artist}</p>
        <p class="text-text-secondary text-xs font-mono">
            {album.playCount.toLocaleString()} plays
        </p>
    </div>
</a>

<style>
    .album-container {
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .album-wrap {
        --album-size: 144px;
        --disk-size: 130px;
        position: relative;
        width: var(--album-size);
        height: var(--album-size);
    }

    .album-cover {
        position: absolute;
        z-index: 1;
        border-radius: 1px;
        width: var(--album-size);
        height: var(--album-size);
        background-size: cover;
        background-color: var(--color-surface);
        transition: all ease-in-out 0.35s;
        box-shadow:
            10px 40px 40px -10px #00000030,
            inset 2px 1px 3px #ffffff60,
            inset 0 -1px 2px #00000080;
    }

    .album-link:hover .album-cover {
        margin-left: -24px;
        box-shadow:
            10px 24px 24px -10px #00000030,
            inset 4px 1px 3px #ffffff60,
            inset 0 -1px 2px #00000080;
    }

    .disk {
        position: absolute;
        width: var(--disk-size);
        height: var(--disk-size);
        border-radius: calc(var(--disk-size) / 2);
        background: #222;
        left: 10px;
        top: 7px;
        transition: margin cubic-bezier(0.6, -0.28, 0.735, 0.045) 0.4s;
        animation: rotating 2.5s linear paused infinite;
        overflow: hidden;
    }

    .disk::after {
        box-sizing: border-box;
        content: "";
        width: calc(var(--disk-size) / 3);
        height: calc(var(--disk-size) / 3);
        border: 19px solid var(--disc-color);
        position: absolute;
        top: 50%;
        left: 50%;
        border-radius: 50%;
        margin-top: calc(var(--disk-size) / 6 * -1);
        margin-left: calc(var(--disk-size) / 6 * -1);
    }

    .disk::before {
        box-sizing: border-box;
        content: "";
        position: absolute;
        border: 1px solid rgba(255, 255, 255, 0.2);
        width: calc(var(--disk-size) - 10px);
        height: calc(var(--disk-size) - 10px);
        top: 50%;
        left: 50%;
        border-radius: 50%;
        margin-top: calc((var(--disk-size) - 10px) / -2);
        margin-left: calc((var(--disk-size) - 10px) / -2);
    }

    .disk-inside {
        width: calc(var(--disk-size) / 2);
        height: calc(var(--disk-size) / 2);
        position: absolute;
        top: 0;
        left: 50%;
        background: rgba(255, 255, 255, 0.15);
        filter: blur(2px);
    }

    .album-link:hover .disk {
        margin-left: 48px;
        animation-play-state: running;
        box-shadow: 0px 0px 24px -10px #00000030;
    }

    @keyframes rotating {
        from {
            transform: rotate(0deg);
        }
        50% {
            transform: rotate(180deg);
        }
        to {
            transform: rotate(360deg);
        }
    }
</style>
