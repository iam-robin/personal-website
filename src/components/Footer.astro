---
import Grid from './Grid.astro';
import GridBox from './GridBox.astro';
---

<footer
    class="sticky top-[100vh] pb-28 pt-5 brightness-95 transition duration-300 md:py-5"
    style="background-color: var(--active-bg-color);"
>
    <Grid>
        <GridBox
            classes="flex justify-between items-center text-xs text-black-600 dark:text-white-600"
        >
            <p>
                Â© <span id="copyright-year"></span>, <span class="block sm:inline"
                    >Robin Spielmann</span
                >
            </p>
            <ul class="flex flex-col gap-0.5 xs:flex-row xs:gap-4">
                <li><a href="/legal">Legal notice</a></li>
                <li><a href="/changelog">Changelog</a></li>
                <li><a href="https://github.com/iam-robin/personal-website">Source code</a></li>
            </ul>
        </GridBox>
    </Grid>
</footer>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const copyrightYear = document.getElementById('copyright-year');
        if (copyrightYear) copyrightYear.textContent = new Date().getFullYear().toString();
    });
</script>
