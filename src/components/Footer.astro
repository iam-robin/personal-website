---
import Contact from "./Contact.astro";
import Container from "./Container.astro";

interface Props {
    class?: string;
}

const { class: className } = Astro.props;
---

<Container class={className}>
    <Contact />
    <footer class="flex justify-between mb-4 mt-12">
        <p>
            Â© <span id="copyright-year"></span>, <span class="block sm:inline"
                >Robin Spielmann</span
            >
        </p>
        <ul class="flex flex-col gap-0.5 sm:flex-row sm:gap-4">
            <li><a href="/legal">Legal notice</a></li>
            <li><a href="/changelog">Changelog</a></li>
            <li>
                <a href="https://github.com/iam-robin/personal-website"
                    >Source code</a
                >
            </li>
        </ul>
    </footer>
</Container>

<script>
    document.addEventListener("astro:page-load", function () {
        const copyrightYear = document.getElementById("copyright-year");
        if (copyrightYear)
            copyrightYear.textContent = new Date().getFullYear().toString();
    });
</script>
