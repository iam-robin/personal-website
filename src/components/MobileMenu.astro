---
import { List, X } from '@phosphor-icons/react';
---

<nav
    class="fixed bottom-1 left-1 right-1 z-50 flex cursor-pointer items-center justify-center lg:hidden"
>
    <details class="relative bottom-4 w-52 select-none text-center text-md text-white">
        <summary
            class="flex h-14 items-center justify-center rounded-3xl bg-black/80 backdrop-blur-sm"
        >
            <span class="menu absolute left-8 mt-0.5">
                <List weight="bold" size={20} />
            </span>
            <span class="x absolute left-8 mt-0.5 hidden">
                <X weight="bold" size={20} />
            </span>
             Menu
        </summary>
        <ul
            class="absolute bottom-16 flex w-full flex-col rounded-3xl bg-black/80 py-5 backdrop-blur-sm"
        >
            <li class="py-1 hover:bg-white hover:text-black"><a href="/">Home</a></li>
            <li class="py-1 hover:bg-white hover:text-black"><a href="/media">Media</a></li>
            <li class="py-1 hover:bg-white hover:text-black"><a href="/bookmarks">Bookmarks</a></li>
        </ul>
    </details>
</nav>

<style>
    details[open] .menu {
        display: none;
    }
    details[open] .x {
        display: block;
    }
</style>
