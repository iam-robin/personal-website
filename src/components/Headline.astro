---
interface Props {
    level?: 1 | 2 | 3 | 4 | 5 | 6;
    class?: string;
}

const { level = 1, class: className } = Astro.props;
const Tag = `h${level}` as const;
---

<Tag class:list={["headline", className]}>
    <slot />
</Tag>

<style>
    .headline {
        font-weight: 700;
        line-height: 1.2;
    }

    h1.headline {
        font-size: 2.5rem;
    }

    h2.headline {
        font-size: 2rem;
    }

    h3.headline {
        font-size: 1.75rem;
    }

    h4.headline {
        font-size: 1.5rem;
    }

    h5.headline {
        font-size: 1.25rem;
    }

    h6.headline {
        font-size: 1rem;
    }

    @media (max-width: 768px) {
        h1.headline {
            font-size: 2rem;
        }

        h2.headline {
            font-size: 1.75rem;
        }

        h3.headline {
            font-size: 1.5rem;
        }
    }
</style>
