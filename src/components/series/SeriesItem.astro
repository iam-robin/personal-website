---
import MediaItem from "@components/media/MediaItem.astro";
import type { Series } from "@api/github-series";

interface Props {
    series: Series;
    status?: "watching" | "paused";
}

const { series, status } = Astro.props;
---

<MediaItem
    title={series.title}
    subtitle={series.season}
    date={series.finished}
    coverUrl={series.cover}
    rating={series.rating}
    status={status}
/>
