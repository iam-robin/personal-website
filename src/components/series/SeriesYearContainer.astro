---
import YearSection from "@components/YearSection.astro";
import SeriesItem from "./SeriesItem.astro";
import type { Series } from "@api/github-series";

interface Props {
    year: number | string;
    series: Series[];
    aktivSeries?: Series[];
}

const { year, series = [], aktivSeries = [] } = Astro.props;
---

<YearSection year={year}>
    {aktivSeries.map((s) => <SeriesItem series={s} status="watching" />)}
    {series.map((s) => <SeriesItem series={s} />)}
</YearSection>
