---
interface Props {
    selectedSort: "newest" | "last-edited";
    selectedCategory?: string;
}

const { selectedSort, selectedCategory } = Astro.props;

// Build URLs based on whether a category is selected
const newestUrl = selectedCategory
    ? `/garden/${selectedCategory.toLowerCase()}/newest`
    : "/garden/sort/newest";

const lastEditedUrl = selectedCategory
    ? `/garden/${selectedCategory.toLowerCase()}/last-edited`
    : "/garden/sort/last-edited";
---

<div class="flex gap-4 items-center">
    <p class="font-bold">Sort by</p>
    <ul class="flex gap-1">
        <li>
            <a
                href={newestUrl}
                class:list={[
                    "px-2 py-1 rounded no-underline",
                    selectedSort === "newest"
                        ? "bg-surface-raised text-text-primary"
                        : "text-text-muted hover:text-text-primary",
                ]}
            >
                Newest
            </a>
        </li>
        <li>
            <a
                href={lastEditedUrl}
                class:list={[
                    "px-2 py-1 rounded no-underline",
                    selectedSort === "last-edited"
                        ? "bg-surface-raised text-text-primary"
                        : "text-text-muted hover:text-text-primary",
                ]}
            >
                Last edited
            </a>
        </li>
    </ul>
</div>
