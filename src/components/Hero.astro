---
import Grid from "./Grid.astro";
import GridItem from "./GridItem.astro";
import Link from "./Link.astro";
import SmileySticker from "./stickers/SmileySticker.astro";
import CodeSticker from "./stickers/CodeSticker.astro";
import DesignSticker from "./stickers/DesignSticker.astro";
import ArtSticker from "./stickers/ArtSticker.astro";
import Container from "./Container.astro";
---

<div
    data-hero
    class="hero-animate -mt-24 pt-40 md:pt-64 md:pb-32 flex items-center bg-surface"
>
    <Container>
        <Grid class="mb-16!">
            <GridItem colSpan={{ small: 12, medium: 12, large: 11 }}>
                <h1 class="text-2xl md:text-3xl leading-tight font-bold">
                    Hey
                    <SmileySticker
                        class="hero-icon hero-icon-1 inline-block align-[-0.25em] h-auto w-12 md:w-[72px] -mr-1 -mt-5 overflow-hidden"
                        iconColor="--color-sticker-yellow-dark"
                        bgColor="--color-sticker-yellow"
                    />
                    I am Robin Spielmann.
                    <br class="hidden sm:block" />
                    A Design Engineer who enjoys working at the intersection of
                    <br class="hidden sm:block" />
                    <CodeSticker
                        class="hero-icon hero-icon-2 inline-block align-[-0.25em] h-auto w-12 md:w-[72px] -mr-1 -mt-5 overflow-hidden"
                        iconColor="--color-sticker-blue-dark"
                        bgColor="--color-sticker-blue"
                    />
                    code,
                    <DesignSticker
                        class="hero-icon hero-icon-3 inline-block align-[-0.25em] h-auto w-10 md:w-15 -mr-1 -mt-5 translate-y-1 overflow-hidden"
                        iconColor="--color-sticker-red-dark"
                        bgColor="--color-sticker-red"
                    />
                    design and
                    <ArtSticker
                        class="hero-icon hero-icon-4 inline-block align-[-0.25em] h-auto w-12 md:w-[72px] -mr-1 -mt-5 translate-y-0.5 md:translate-y-0 overflow-hidden"
                        iconColor="--color-sticker-lilac-dark"
                        bgColor="--color-sticker-lilac"
                    />
                    art.
                </h1>
            </GridItem>
            <GridItem
                colStart={{ small: 1, medium: 1, large: 5 }}
                colEnd={{ small: 13, medium: 13, large: 12 }}
            >
                <p
                    data-hero-subtitle
                    class="hero-subtitle text-base font-mono mt-6 md:mt-12"
                >
                    This personal website is my own little space on the internet
                    where I want to share my work, interests and passions with
                    others, without having to please the algorithms of social
                    media platforms or follow any other rules. I hope you enjoy
                    exploring my digital living room as much as I enjoyed
                    creating it.
                </p>
            </GridItem>
        </Grid>
    </Container>
</div>

<style is:global>
    /* Hero container fade-in */
    @keyframes heroFadeIn {
        from {
            opacity: 0;
        }
        to {
            opacity: 1;
        }
    }

    /* Icon entrance animation */
    @keyframes iconEntrance72 {
        from {
            opacity: 0;
            width: 0;
            margin-right: -12px;
            transform: translateY(25px);
        }
        to {
            opacity: 1;
            width: 72px;
            margin-right: -4px;
            transform: translateY(0);
        }
    }

    @keyframes iconEntrance60 {
        from {
            opacity: 0;
            width: 0;
            margin-right: -12px;
            transform: translateY(25px) rotate(12deg);
        }
        to {
            opacity: 1;
            width: 60px;
            margin-right: -4px;
            transform: translateY(4px) rotate(12deg);
        }
    }

    /* Subtitle fade-in */
    @keyframes subtitleFadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Apply animations only on desktop */
    @media (min-width: 768px) {
        .hero-animate {
            animation: heroFadeIn 1s ease-out forwards;
        }

        /* Icons start hidden and animate in */
        /* Using 'both' fill-mode keeps first keyframe styles during delay */
        .hero-icon {
            opacity: 0;
            width: 0;
            margin-right: -12px;
            animation-fill-mode: both;
            animation-timing-function: cubic-bezier(0.34, 1.56, 0.64, 1);
            animation-duration: 0.6s;
        }

        .hero-icon-1 {
            animation-name: iconEntrance72;
            animation-delay: 0.25s;
        }

        .hero-icon-2 {
            animation-name: iconEntrance72;
            animation-delay: 0.5s;
        }

        .hero-icon-3 {
            animation-name: iconEntrance60;
            animation-delay: 0.75s;
        }

        .hero-icon-4 {
            animation-name: iconEntrance72;
            animation-delay: 1s;
        }

        /* Subtitle animation */
        .hero-subtitle {
            opacity: 0;
            animation: subtitleFadeIn 0.6s ease-out 1.5s both;
        }
    }

    /* On mobile, no animations - show everything immediately */
    @media (max-width: 767px) {
        .hero-animate {
            opacity: 1;
        }

        .hero-icon {
            opacity: 1;
        }

        .hero-subtitle {
            opacity: 1;
        }
    }
</style>
