---
import Grid from '@components/Grid.astro';
import OpenStoriesCategory from './OpenStoriesCategory.astro';
import GridBox from '@components/GridBox.astro';
import SectionContent from '@components/SectionContent.astro';
---

<Grid>
    <GridBox desktopFull>
        <SectionContent
            title="Stories"
            description="Posting stories without the need for a social media platform – why not? This should serve as a kind of visual diary with snapshots of things that I like and do. Powered by the great open-source package open-stories."
        />
        <div class="flex gap-8 overflow-x-auto p-1">
            <OpenStoriesCategory title="bicycle" />
            <OpenStoriesCategory title="me" />
            <OpenStoriesCategory title="art" />
            <OpenStoriesCategory title="hiking" />
            <OpenStoriesCategory title="cooking" />
        </div>
    </GridBox>
</Grid>

