---
import MediaItem from "@components/media/MediaItem.astro";

interface Props {
    film: {
        title: string;
        watched_on: string;
        rating: number;
        liked: boolean;
        rewatched: boolean;
        permalink: string;
        posterUrl?: string;
    };
}

const { film } = Astro.props;
---

<MediaItem
    title={film.title}
    date={film.watched_on}
    coverUrl={film.posterUrl}
    rating={film.rating}
    isRewatch={film.rewatched}
    isLiked={film.liked}
    externalUrl={`https://letterboxd.com/${film.permalink}`}
/>
