---
import YearSection from "@components/YearSection.astro";
import MovieItem from "./MovieItem.astro";

interface Props {
    year: number;
    films: Array<{
        title: string;
        watched_on: string;
        rating: number;
        liked: boolean;
        rewatched: boolean;
        permalink: string;
    }>;
}

const { year, films = [] } = Astro.props;
---

<YearSection year={year} count={films.length}>
    {films.map((film) => <MovieItem film={film} />)}
</YearSection>
